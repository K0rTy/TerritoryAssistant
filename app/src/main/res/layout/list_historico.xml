<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    <!--android:layout_height="?android:attr/listPreferredItemHeight"-->

    <TextView
        android:layout_width="65dip"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_tipo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_nome_dirigente"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/view"
        android:layout_toRightOf="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_data_inicio"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_data_fim"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/view3"
        android:layout_toRightOf="@+id/view3" />

    <!-- Divisores -->

    <View
        android:layout_width="5dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_tipo"
        android:layout_toEndOf="@+id/txt_tipo"
        android:layout_alignBottom="@+id/txt_nome_dirigente"
        android:background="@color/divider"
        android:id="@+id/view"
        android:layout_marginRight="5dp" />

    <View
        android:layout_width="5dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/view2" />

    <View
        android:layout_width="5dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_below="@+id/txt_tipo"
        android:id="@+id/view3"
        android:layout_toRightOf="@+id/txt_data_inicio"
        android:layout_toEndOf="@+id/txt_data_inicio"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>